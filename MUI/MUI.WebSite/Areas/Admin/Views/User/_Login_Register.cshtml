@using NewLife.Common

<div class="kt-login__signup">
    <div class="kt-login__head">
        <h3 class="kt-login__title">注册</h3>
        <div class="kt-login__desc">输入您的详细信息以创建账户</div>
    </div>
    <div class="kt-login__form kt-form">
        @using (Html.BeginForm("Register", "User", new { r = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div class="form-group kt-form__group">
                <input class="form-control" type="text" id="username_reg" placeholder="用户名" name="username">
            </div>
            <div class="form-group kt-form__group">
                <input class="form-control" type="text" placeholder="邮箱" id="email" name="email" autocomplete="off">
            </div>
            <div class="form-group kt-form__group">
                <input class="form-control" type="password" placeholder="密码" id="password_reg" name="password">
            </div>
            <div class="form-group kt-form__group">
                <input class="form-control form-control-last" type="password" id="password2" placeholder="确认密码" name="password2">
            </div>
            <div class="kt-login__extra">
                <label class="kt-checkbox">
                    <input type="checkbox" name="agree">我同意 <a href="#" class="kt-link">条款和协议</a>.
                    <span></span>
                </label>
            </div>
            <div class="kt-login__actions">
                <button id="kt_login_register_submit" type="submit" class="btn btn-brand btn-pill btn-elevate">注册</button>
                <button id="kt_login_signup_cancel" class="btn btn-outline-brand btn-pill">返回</button>
            </div>
        }
    </div>
</div>
